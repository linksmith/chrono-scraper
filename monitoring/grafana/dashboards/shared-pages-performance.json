{
  "dashboard": {
    "id": null,
    "title": "Shared Pages Architecture - Performance",
    "tags": ["chrono-scraper", "shared-pages", "performance"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-3h",
      "to": "now"
    },
    "refresh": "15s",
    "schemaVersion": 27,
    "version": 1,
    "annotations": {
      "list": []
    },
    "templating": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "API Response Times",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{endpoint=~\"/api/v1/shared-pages/.*\"}[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{endpoint=~\"/api/v1/shared-pages/.*\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{endpoint=~\"/api/v1/shared-pages/.*\"}[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Database Query Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "chrono_sample_query_time_seconds",
            "legendFormat": "Sample Query Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "orange",
                  "value": 2
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Processing Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "chrono_avg_processing_time_seconds",
            "legendFormat": "Avg Processing Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 30
                },
                {
                  "color": "orange",
                  "value": 120
                },
                {
                  "color": "red",
                  "value": 300
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Throughput Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(chrono_pages_processed_total[5m]) * 60",
            "legendFormat": "Pages Processed/min"
          },
          {
            "expr": "rate(chrono_project_associations_total[5m]) * 60",
            "legendFormat": "Associations Created/min"
          },
          {
            "expr": "rate(chrono_cdx_registry_total[5m]) * 60",
            "legendFormat": "CDX Entries/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Backlog and Queue Status",
        "type": "timeseries",
        "targets": [
          {
            "expr": "chrono_processing_backlog",
            "legendFormat": "Processing Backlog"
          },
          {
            "expr": "chrono_indexing_backlog",
            "legendFormat": "Indexing Backlog"
          },
          {
            "expr": "chrono_stuck_pages",
            "legendFormat": "Stuck Pages"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "CDX Status Breakdown",
        "type": "timeseries",
        "targets": [
          {
            "expr": "chrono_cdx_status_pending",
            "legendFormat": "Pending"
          },
          {
            "expr": "chrono_cdx_status_in_progress",
            "legendFormat": "In Progress"
          },
          {
            "expr": "chrono_cdx_status_completed",
            "legendFormat": "Completed"
          },
          {
            "expr": "chrono_cdx_status_failed",
            "legendFormat": "Failed"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "stacking": {
                "mode": "normal",
                "group": "A"
              }
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Resource Utilization",
        "type": "timeseries",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %"
          },
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "orange",
                  "value": 85
                },
                {
                  "color": "red",
                  "value": 95
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Performance Alerts Summary",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertname=~\".*SharedPages.*|.*Performance.*\"}",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "filterable": true
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        }
      }
    ]
  }
}