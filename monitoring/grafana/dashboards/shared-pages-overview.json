{
  "dashboard": {
    "id": null,
    "title": "Shared Pages Architecture - Overview",
    "tags": ["chrono-scraper", "shared-pages", "architecture"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "annotations": {
      "list": []
    },
    "templating": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "Shared Pages Architecture Health",
        "type": "stat",
        "targets": [
          {
            "expr": "chrono_shared_pages_healthy",
            "legendFormat": "Health Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "UNHEALTHY",
                    "color": "red"
                  },
                  "1": {
                    "text": "HEALTHY",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "CDX Deduplication Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "chrono_cdx_deduplication_rate_percent",
            "legendFormat": "Deduplication %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "orange",
                  "value": 60
                },
                {
                  "color": "green",
                  "value": 70
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Page Sharing Efficiency",
        "type": "stat",
        "targets": [
          {
            "expr": "chrono_sharing_efficiency_percent",
            "legendFormat": "Sharing Efficiency %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 20
                },
                {
                  "color": "orange",
                  "value": 40
                },
                {
                  "color": "green",
                  "value": 60
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Processing Time",
        "type": "stat",
        "targets": [
          {
            "expr": "chrono_avg_processing_time_seconds",
            "legendFormat": "Avg Processing Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 30
                },
                {
                  "color": "orange",
                  "value": 120
                },
                {
                  "color": "red",
                  "value": 300
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Core Metrics Overview",
        "type": "table",
        "targets": [
          {
            "expr": "chrono_shared_pages_total",
            "legendFormat": "Total Shared Pages",
            "format": "table"
          },
          {
            "expr": "chrono_project_associations_total",
            "legendFormat": "Project Associations",
            "format": "table"
          },
          {
            "expr": "chrono_cdx_registry_total",
            "legendFormat": "CDX Registry Entries",
            "format": "table"
          },
          {
            "expr": "chrono_pages_processed_total",
            "legendFormat": "Processed Pages",
            "format": "table"
          },
          {
            "expr": "chrono_pages_indexed_total",
            "legendFormat": "Indexed Pages",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 6
        }
      },
      {
        "id": 6,
        "title": "Processing Pipeline Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "chrono_pages_processed_total",
            "legendFormat": "Processed"
          },
          {
            "expr": "chrono_processing_backlog",
            "legendFormat": "Backlog"
          },
          {
            "expr": "chrono_pages_failed_total",
            "legendFormat": "Failed"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 6
        }
      },
      {
        "id": 7,
        "title": "Recent Activity (24h)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(chrono_pages_created_24h[1h])",
            "legendFormat": "Pages Created/hour"
          },
          {
            "expr": "increase(chrono_associations_created_24h[1h])",
            "legendFormat": "Associations Created/hour"
          },
          {
            "expr": "increase(chrono_cdx_entries_24h[1h])",
            "legendFormat": "CDX Entries/hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 14
        }
      },
      {
        "id": 8,
        "title": "Error Rate Trend",
        "type": "timeseries",
        "targets": [
          {
            "expr": "chrono_error_rate_24h_percent",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
