FROM node:20-alpine

WORKDIR /app

# Install dependencies for building native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy application code
COPY . .

# Expose port
EXPOSE 5173

# Run development server with hot reload and increased heap size
CMD ["node", "--max-old-space-size=768", "./node_modules/.bin/vite", "dev", "--host"]