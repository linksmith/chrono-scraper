# Production Environment Variables Example
# Copy this file to .env in production and fill in your actual values

# Environment
ENVIRONMENT=production

# Frontend URL (for email links)
FRONTEND_URL=https://your-domain.com

# Database
POSTGRES_SERVER=your-postgres-server
POSTGRES_USER=your-postgres-user
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=chrono_scraper
POSTGRES_PORT=5432

# Redis
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_DB=0

# Security
SECRET_KEY=your-very-secret-key-generate-with-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48

# Email Settings - Mailgun (Recommended for production)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.your-domain.com
MAILGUN_EU_REGION=false  # Set to true if using EU region
EMAILS_FROM_EMAIL=noreply@your-domain.com
EMAILS_FROM_NAME=Chrono Scraper

# Alternative: SMTP Settings (if not using Mailgun)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_TLS=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password

# Meilisearch
MEILISEARCH_HOST=http://your-meilisearch-host:7700
MEILISEARCH_MASTER_KEY=your-secure-master-key

# CORS (Add your frontend domains)
BACKEND_CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]

# OpenAI/LLM for user evaluation
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# OAuth2 (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH2_ENABLED=true

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Firecrawl Configuration
FIRECRAWL_API_KEY=your-firecrawl-api-key
FIRECRAWL_BASE_URL=https://api.firecrawl.com
FIRECRAWL_MODE=cloud

# Rate Limiting
ENABLE_RATE_LIMITING=true
GLOBAL_RATE_LIMIT=10.0
DOMAIN_RATE_LIMIT=1.0